%div.fancy-link.blue-haze{class: "#{defined?(_class) ? _class : ""}"}
  =link_to link, class: "fancy-link #{defined?(margin) and margin ? "margin-small" : ""} " do
    %p.text-center
      - if not defined?(left_icon) or not left_icon
        %span.bi{class: defined?(icon) ? icon : "bi-arrow-left"}
      %span= title
      - if defined?(left_icon) and left_icon
        %span.bi{class: defined?(icon) ? icon : "bi-arrow-left"}