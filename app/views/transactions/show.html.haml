=render "header"

%div.center
  = render "notice"

  %div.flex
    =render "wallets/icon", wallet: @transaction.origin, noclick: false

    %div.small-spacer

    %div.fira-code.center.full-h= "----------------->"

    %div.small-spacer

    =render "wallets/icon", wallet: @transaction.destination, noclick: false

  %p
    %b= "#{t("form.value")}:"
    = @transaction.value

  %p
    %b= "#{t("form.description")}:"
    = @transaction.description

  %div.naked-btt
    = button_to transaction_path(@transaction), :method => :delete, class: 'rounded big-font' do
      %span.bi.bi-trash
      %span= t('form.delete')

  %div.flex
    = render "linkdash", force_dash: true
    %div.small-spacer
    = render "fancylinkblue", link: edit_transaction_path(@transaction), title: t("form.edit"), icon: "bi-arrow-right", left_icon: true, margin: true
