= form_for @wallet do |f|
  - if @wallet.errors.any?
    #error_explanation
      %h2= "#{pluralize(@wallet.errors.count, "error")} prohibited this wallet from being saved:"
      %ul
        - @wallet.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :name
    = f.text_field :name
  .field
    = f.label :icon
    = f.text_field :icon
  .field
    = f.label :value
    = f.number_field :value
  .field
    = f.label :system
    = f.check_box :system
  .actions
    = f.submit 'Save'
